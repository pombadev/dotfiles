// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "ui_font_family": "FiraMono Nerd Font",
  "buffer_font_family": "FiraMono Nerd Font",
  "icon_theme": "Colored Zed Icons Theme Dark",
  "vim_mode": false,
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "use_autoclose": true,
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-3.5-turbo"
    },
    "version": "2"
  },
  "scrollbar": {
    "show": "system"
  },
  "base_keymap": "SublimeText",
  "auto_update": false,
  "theme": "One Dark Pro",
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "show_whitespaces": "all",
  // "vim_mode": true,
  "preview_tabs": {
    "enabled": false
  },
  "indent_guides": {
    "enabled": true
  },
  "tabs": {
    "git_status": true,
    "file_icons": true
  },
  "soft_wrap": "editor_width",
  "file_types": {
    "FSharp": ["*.fsx"],
    "Blade": ["*.blade.php"],
    "ini": [".npmrc"]
  },
  "lsp": {
    "cargotom": {
      "initialization_options": {
        "offline": false,
        "stable": false,
        "per_page_web": 10
      }
    },
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          // "--enable-all",
          "lll",
          "--out-format",
          "json",
          "--issues-exit-code=1"
        ]
      }
    }
  },
  "languages": {
    "Go": {
      "language_servers": ["gopls", "golangci-lint"]
    },
    "Dune": {
      "formatter": {
        "external": {
          "command": "dune",
          "arguments": ["format-dune-file"]
        }
      }
    }
  }
}
